# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=aviation_bot
# New (MySQL2 compatible)  
DB_ACQUIRE_TIMEOUT_MILLIS=60000
DB_CONNECT_TIMEOUT=60000
 

# AI Provider Configuration
CLAUDE_API_KEY=your_token_here
GEMINI_API_KEY=your_token_here


# Network Configuration (for regions where Telegram might be blocked)
# HTTP_PROXY=http://your-proxy-server:port
# HTTPS_PROXY=http://your-proxy-server:port

# Alternative Telegram API endpoints (if needed)
TELEGRAM_API_URL=https://api.telegram.org

# Timeout Configuration
REQUEST_TIMEOUT=60000
POLLING_TIMEOUT=100



# Environment
NODE_ENV=production 

BASE_PATH=/Volumes/SSD-NVMe-2


# SNS 
INSTAGRAM_ACCESS_TOKEN=your_token_here
INSTAGRAM_PAGE_ID=your_page_id_here

# Setup Instructions:
# 1. Copy this file to .env
# 2. Get a Telegram Bot Token from @BotFather
# 3. Get a Google Gemini API key from https://makersuite.google.com/app/apikey
# 4. (Optional) Get an Anthropic API key from https://console.anthropic.com/
# 5. Setup MySQL database and update DB_* configuration
# 6. Run: npm start
