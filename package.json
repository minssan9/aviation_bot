{
  "name": "aviation-knowledge-bot",
  "version": "2.0.0",
  "description": "Daily aviation knowledge telegram bot with Google Gemini AI integration",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:prod": "node src/app.js",
    "dev": "NODE_ENV=development nodemon --watch src --ext js,json --signal SIGTERM src/app.js",
    "legacy": "node bot.js",
    "docker:build": "docker build -t aviation-bot:latest .",
    "compose:up": "docker compose up -d",
    "compose:down": "docker compose down"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@google/generative-ai": "^0.19.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "moment-timezone": "^0.5.43",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "node-cron": "^3.0.2",
    "node-telegram-bot-api": "^0.61.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  }
}
